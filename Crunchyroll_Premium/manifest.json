{
	"name": "Crunchyroll iFrame Player",
	"version": "1.0.3",
	"description": "Permite ver todos os v√≠deos do crunchyroll gratuitamente.",
	"author": "itallolegal",
	"icons": { "48": "icon.png" },
	"browser_action":{
		"default_title": "Crunchyroll iFrame Player",
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		  "storage"
        ],
	"content_scripts": [
    {
        "matches": ["https://beta.crunchyroll.com/*", "https://beta.crunchyroll.com/*"],
        "css": ["content.css"],
        "js": ["content.js"]
    }
],
	"manifest_version": 2
}
